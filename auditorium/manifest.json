{
  "manifest_version": 2,
  "name": "Page to extension messaging",
  "description": "TBD",
  "version": "1.0",
  "homepage_url": "https://www.offen.dev",
  "icons": {},
  "permissions": ["<all_urls>", "storage", "webRequest", "webRequestBlocking"],
  "web_accessible_resources": [
    "extension/page-script.js"
  ],
  "browser_action": {
    "default_icon": "extension/icons/star.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["extension/content-script.js"]
    }
  ]
}
